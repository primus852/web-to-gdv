<div class="header">
    <div class="row">
        <div class="col-9">
            <h2 class="page-title"><a class="icon circle-icon fa fa-remove trigger-message-close"></a>
                Vermittlungsauftrag vom {{ job.createDateTime|date("d.m.Y") }} | Schadennummer {{ job.insuranceDamageNo }}
            </h2>
        </div>
        <div class="col-3 text-right">
            {% if job.receipt == false %}
                <div class="btn-group" role="group" aria-label="BtnGroup">
                    <a href="#" class="btn btn-sm btn-success js-receipt-job" data-url="{{ path('ajaxCreateReceipt') }}" data-id="{{ job.id }}" data-job="{{ job.insuranceDamageNo }}"><i class="fa fa-check"></i> Quittieren</a>
                    <a href="{{ path('printJob', {'id': job.id}) }}" class="btn btn-sm btn-warning"><i class="fa fa-print"></i> Drucken</a>
                </div>
                <input type="hidden" id="reason_{{ job.id }}" value="NONE"/>
            {% else %}
                {% if job.receiptStatus == 1 %}
                    <span class="badge badge-success">Quittiert am {{ job.receiptDate|date("d.m.Y H:i") }} Uhr</span>
                {% elseif job.finishDate is not empty %}
                    <span class="badge badge-success">Quittiert am {{ job.receiptDate|date("d.m.Y H:i") }} Uhr</span>
                    <span class="badge badge-danger">Abgeschlossen am {{ job.finishDate|date("d.m.Y H:i") }} Uhr</span>
                {% endif %}
                <div class="btn-group" role="group" aria-label="BtnGroup">
                    <a href="{{ path('printJob', {'id': job.id}) }}" class="btn btn-sm btn-warning"><i class="fa fa-print"></i> Drucken</a>
                </div>
            {% endif %}
        </div>
    </div>
</div>
